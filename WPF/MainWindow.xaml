<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Comparison Shopping Engine" ResizeMode="NoResize" Height="450" Width="800" Icon="/2678672181578289022-128.png" Background="White">

    <StackPanel  VerticalAlignment="Top" HorizontalAlignment="Stretch">
        <Button x:Name="SearchWithLinkButton" HorizontalAlignment="Stretch" Height="20" Margin="10 10 10 10">Search with Link</Button>

        <Grid VerticalAlignment="Top" HorizontalAlignment="Stretch" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.82*"/>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10 0 0 0"/>
            <Button x:Name="SearchButton" Grid.Column="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10 0 0 0">Search</Button>
            <TextBlock Grid.Column="2" HorizontalAlignment="Center" FontWeight="Bold">Information</TextBlock>
            <TextBlock Grid.Column="3" HorizontalAlignment="Center" FontWeight="Bold">Filters</TextBlock>
        </Grid>
        <Grid Height="335"  Margin="10 0 10 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.22*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0" Margin="0 10 0 0" HorizontalAlignment="Left" FlowDirection="RightToLeft" CanContentScroll="False" VerticalScrollBarVisibility="Auto">
                <ListView x:Name="ListOfLaptops" FlowDirection="LeftToRight" Width="250" HorizontalAlignment="Left" VerticalAlignment="Stretch" VerticalContentAlignment="Top"/>
            </ScrollViewer>
            <TextBlock Grid.Column="1" x:Name="InformationTextBox"></TextBlock>
            <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Height="335" Margin="314,0,0,0" VerticalAlignment="Bottom">
                <TextBlock FontSize="10" HorizontalAlignment="Center" FontWeight="Normal" FontStyle="Italic">Location</TextBlock>
                <CheckBox x:Name="LocalCheckbox" Content="Local Shopping"/>
                <CheckBox x:Name="OnlineCheckbox" Content="Online Shopping"/>

                <TextBlock FontSize="10" HorizontalAlignment="Center" FontStyle="Italic">Brand</TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <CheckBox x:Name="AsusCheckBox" Content="Asus"/>
                        <CheckBox x:Name="LenovoCheckBox" Content="Lenovo"/>
                        <CheckBox x:Name="AppleCheckBox" Content="Apple"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <CheckBox x:Name="HuaweiCheckBox" Content="Huawei"/>
                        <CheckBox x:Name="AcerCheckBox" Content="Acer"/>
                        <CheckBox x:Name="HPCheckBox" Content="HP"/>
                    </StackPanel>
                </Grid>

                <TextBlock FontSize="10" HorizontalAlignment="Center" FontStyle="Italic">Processor</TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <CheckBox x:Name="i3CheckBox" Content="Intel Core i3"/>
                        <CheckBox x:Name="i5CheckBox" Content="Intel Core i5"/>
                        <CheckBox x:Name="i7CheckBox" Content="Intel Core i7"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <CheckBox x:Name="IntelCeleronCheckBox" Content="IntelCeleron"/>
                        <CheckBox x:Name="IntelAtomCheckBox" Content="Intel Atom"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
        

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Width="260"></StackPanel>

    </StackPanel>
    
    


</Window>
 